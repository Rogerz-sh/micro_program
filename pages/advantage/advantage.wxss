.box-ctn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background:#0084b6;
    padding: 10px 5px;
    border-radius: 5px;
    margin-bottom: 10px;
}

.box-img {
    width: 70px;
}

.img {
    width: 70px;
    height: 70px;
}

.box-body {
    flex: 1;
    padding: 0 10px;
}

.box-title {
    font-size: 16px;
    color: #fff;
    font-weight: bold;
    margin-bottom: 5px;
}

.box-content {
    color: #fff;
}