/**app.wxss**/
page {
  height: 100%;
  font-family: "微软雅黑";
  font-size: 14px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color: #fff;
  padding: 5px;
} 

.flex {
  flex: 1;
  display: flex;
}

.flex.flex-2 {
  flex: 2;
}

.flex.row {
  flex-direction: row;
  width: 100%;
}

.flex.col {
  flex-direction: column;
  height: 100%;
}

.flex.center {
  align-items: center;
  justify-content: center;
}

.padding-horizontal-5 {
  padding: 0 5px;
} 

.bg-main {
  background: #f38e00;
}

.bg-orange {
  background: #ec5315;
}

.bg-blue {
  background: #0084b6;
}

.bg-green {
  background: #69c37d;
}

.bg-purple {
  background: #7f69c3;
}